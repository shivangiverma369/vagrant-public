Vagrant.configure("2") do |config|

  # Ubuntu machines
  config.vm.define "ubuntu1" do |ubuntu1|
    ubuntu1.vm.box = "ubuntu/focal64"
    ubuntu1.vm.hostname = "ubuntu1"
    ubuntu1.vm.network "private_network", ip: "192.168.50.10"
    ubuntu1.vm.provider "virtualbox" do |v|
      v.memory = 2048
      v.cpus = 2
    end
    ubuntu1.vm.provision "shell", inline: "sudo useradd -m -s /bin/bash -p $(openssl passwd -1 vagrant) vagrant"
  end

  config.vm.define "ubuntu2" do |ubuntu2|
    ubuntu2.vm.box = "ubuntu/focal64"
    ubuntu2.vm.hostname = "ubuntu2"
    ubuntu2.vm.network "private_network", ip: "192.168.50.11"
    ubuntu2.vm.provider "virtualbox" do |v|
      v.memory = 2048
      v.cpus = 2
    end
    ubuntu2.vm.provision "shell", inline: "sudo useradd -m -s /bin/bash -p $(openssl passwd -1 vagrant) vagrant"
  end

  # Red Hat machines
  config.vm.define "redhat1" do |redhat1|
    redhat1.vm.box = "generic/redhat7"
    redhat1.vm.hostname = "redhat1"
    redhat1.vm.network "private_network", ip: "192.168.50.20"
    redhat1.vm.provider "virtualbox" do |v|
      v.memory = 2048
      v.cpus = 2
    end
    redhat1.vm.provision "shell", inline: "sudo useradd -m -s /bin/bash -p $(openssl passwd -1 vagrant) vagrant"
  end

  config.vm.define "redhat2" do |redhat2|
    redhat2.vm.box = "generic/redhat7"
    redhat2.vm.hostname = "redhat2"
    redhat2.vm.network "private_network", ip: "192.168.50.21"
    redhat2.vm.provider "virtualbox" do |v|
      v.memory = 2048
      v.cpus = 2
    end
    redhat2.vm.provision "shell", inline: "sudo useradd -m -s /bin/bash -p $(openssl passwd -1 vagrant) vagrant"
  end

end
